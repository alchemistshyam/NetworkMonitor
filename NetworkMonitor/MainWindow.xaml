<Controls:MetroWindow  xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" 
                       x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkMonitor"
        mc:Ignorable="d"
        Title="Network Monitor" WindowState="Maximized">

    <Grid>


        <DataGrid HorizontalAlignment="Left" Height="700" Margin="10,30,-0.4,0" VerticalAlignment="Top">
            <DataGrid.Resources>
                <Style TargetType="DataGridCell">
                    <Setter Property="Cursor" Value="DarkRed"/>
                </Style>


            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="#"/>
                <DataGridTextColumn Header="TimeStamp" Width="*"/>
                <DataGridTextColumn Header="Source" Width="*"/>
                <DataGridTextColumn Header="Protocol" Width="*"/>
                <DataGridTextColumn Header="Destination" Width="*"/>
                <DataGridTextColumn Header="Frame Length" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Controls:MetroWindow>
